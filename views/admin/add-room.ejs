<%- include('../boilerplate/header.ejs') %>
    <div class="container text-center">
        <h1>Add Room</h1>
        <div class="container vh-100 bg-white p-5 text-start add-room-form">
            <form class="w-50 mx-auto" id="add-room">
                <label for="roomName">Room Name</label>
                <input type="text" class="form-control" name="roomName" />
                <label for="roomNumber">Room No.</label>
                <input type="number" class="form-control w-50" name="roomNumber" />
                <div class="amenities-input">
                    <label for="amenities">Amenities</label>
                    <input type="text" class="form-control w-50 amenities-single" name="amenities[]" />
                    <i class="fa-solid fa-plus" id="add-amenity" onclick="addAmenity()"></i>
                </div>
                <label for="description">Description</label>
                <textarea name="description" form="add-room" class="form-control" rows="4" cols="50"></textarea>
            </form>
        </div>
    </div>
    <script>
        const addAmenity = () => {
            if ($('.amenities-single').length === 5) {
                alert(`You can't add anymore amenities. (Max: 5)`)
                return
            }
            $('#add-amenity').remove();
            $('#remove-amenity').remove();

            $('.amenities-input').append('<input type="text" class="form-control w-50 amenities-single mt-3" name="amenities[]" /><i class="fa-solid fa-plus" id="add-amenity" onclick="addAmenity()"></i><i class="fa-solid fa-minus ms-3" id="remove-amenity"></i>')
        }
